


<div class="row">
  <div class="col-sm-6">
    <h1>Location_reviews</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_location_review_path, class: 'btn btn-primary' do %>
    Add New Location review
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Author name</th>
            <th>Author url</th>
            <th>Profile url</th>
            <th>Rating</th>
            <th>Text</th>
            <th>Time</th>
            <th>Type</th>
            <th>Location</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @location_reviews.each do |location_review| %>
        <%= content_tag :tr, id: dom_id(location_review), class: dom_class(location_review) do %>
          

                      <td><%= location_review.author_name %></td>
                      <td><%= location_review.author_url %></td>
                      <td><%= location_review.profile_url %></td>
                      <td><%= location_review.rating %></td>
                      <td><%= location_review.text %></td>
                      <td><%= location_review.time %></td>
                      <td><%= location_review.type %></td>
                      <td><%= location_review.location %></td>
          
          
            <td><%= link_to 'Show', location_review %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
