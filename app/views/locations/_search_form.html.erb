
<nav class="bg-white rounded-lg shadow-lg px-4 py-2 flex items-center justify-between max-w-screen-sm">  
  <!-- Hamburger button -->
        <div class="nav-dropdown">
          <%= button_to  root_path, method: :delete, class: "dropdown-item" do %>
            <span class="fa-solid fa-house"></span>
          <% end %>
        </div>

  <!-- Search form -->
  <div id="search-form" style "z-index: 1000;" >
  <%= form_with url: search_locations_path, class: "flex-grow ml-4", method: :post do |form| %>
    <%= form.search_field :search,
            value: params[:city],
            data: { controller: "location-search", action: "keyup->location-search#changed" },
            # oninput: "this.form.requestSubmit()",
            class: "w-full px-4 py-2 leading-tight border rounded shadow appearance-none focus:outline-none focus:shadow-outline",
            placeholder:"Search for a city" %>
  <% end %>
</div>

  <!-- Vertical line -->
  <div class="h-6 border-r border-gray-300 mx-4"></div>
  <!-- User icon -->
 
  <div class="relative inline-block text-left">
    <% if user_signed_in? %>
      <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
        <span class="fa-solid fa-right-from-bracket"></span>
      <% end %>


    <% else %>
          <%= link_to new_user_session_path, class: "nav-link" do %>
            <i class="fa-solid fa-right-to-bracket"></i>
          <% end %>

    <% end %>

    
  </div>
</nav>


<div id="search_results">
</div>

