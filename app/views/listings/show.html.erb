<%= turbo_frame_tag "app-modal" do %>

    <div class="app-modal bg-orange-200">

      <div class="back">
        <%= link_to "Cancel",
                     "#",
                     data: {controller: "modals", action: "modals#close"},
                     class: "cancel-button" %>
                     
      </div>
      
<div class="page-header">
  <%= link_to listings_path, class: 'btn btn-default' do %>
    All Listings
  <% end %>
  <%= link_to edit_listing_path(@listing), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show listing</h1>
</div>

<dl class="dl-horizontal">
  <dt>Address line1:</dt>
  <dd><%= @listing.address_line1 %></dd>
  <dt>Address line2:</dt>
  <dd><%= @listing.address_line2 %></dd>
  <dt>City:</dt>
  <dd><%= @listing.city %></dd>
  <dt>State:</dt>
  <dd><%= @listing.state %></dd>
  <dt>Postal code:</dt>
  <dd><%= @listing.postal_code %></dd>
  <dt>Country:</dt>
  <dd><%= @listing.country %></dd>
  <dt>Lat:</dt>
  <dd><%= @listing.lat %></dd>
  <dt>Lng:</dt>
  <dd><%= @listing.lng %></dd>
</dl>
</div>

<% end %>
