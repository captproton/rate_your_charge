


<div class="row">
  <div class="col-sm-6">
    <h1>Listings</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_listing_path, class: 'btn btn-primary' do %>
    Add New Listing
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Address line1</th>
            <th>Address line2</th>
            <th>City</th>
            <th>State</th>
            <th>Postal code</th>
            <th>Country</th>
            <th>Lat</th>
            <th>Lng</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <%= content_tag :tr, id: dom_id(listing), class: dom_class(listing) do %>
          

                      <td><%= listing.address_line1 %></td>
                      <td><%= listing.address_line2 %></td>
                      <td><%= listing.city %></td>
                      <td><%= listing.state %></td>
                      <td><%= listing.postal_code %></td>
                      <td><%= listing.country %></td>
                      <td><%= listing.lat %></td>
                      <td><%= listing.lng %></td>
          
          
            <td><%= link_to 'Show', listing %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
