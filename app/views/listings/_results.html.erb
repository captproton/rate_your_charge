    <div class="flex" data-controller="listing-map" data-action="map-loaded@window->address#initGoogle" >
      <div class="w-1/2 p-4 overflow-auto" style="height: 500px;">
        <ul class="list-none">
          <% @listings.each do |listing| %>
          <li class="border border-gray-400 mb-4 p-4 rounded-lg shadow-lg"  data-lat="<%= listing.lat %>" data-title="<%= listing.title %>" data-lng="<%= listing.lng %>">
            <a href="<%= listing_path(listing) %>" class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500 overflow-hidden">
              <!-- <img src="https://images.unsplash.com/photo-1582053433976-25c00369fc93?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=512&q=80" alt="" class="object-cover pointer-events-none group-hover:opacity-75"> -->
              <button type="button" class="absolute inset-0 focus:outline-none">
                <span class="sr-only">View details for <%= listing.title %></span>
              </button>
              <h3 class="font-bold mb-2"><%= listing.title %></h3>
              <p class="mb-2"><%= listing.address_line1 %></p>
              <p class="mb-2"><%= listing.city %></p>
              <p class="mb-2"><%= listing.state %></p>
    
            </a>
            <div class="flex items-center">
              <i class="fas fa-star text-yellow-500 mr-1"></i>
              <i class="fas fa-star text-yellow-500 mr-1"></i>
              <i class="fas fa-star text-yellow-500 mr-1"></i>
              <i class="fas fa-star text-yellow-500 mr-1"></i>
              <i class="fas fa-star text-gray-500"></i>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="w-1/2 p-4">
        <div data-listing-map-target="map"class="bg-gray-300 h-64" style="height: 500px; width: 100%;"></div>
      </div>
    </div>
                        