<%# a form that allows users to edit their account information %>

<hr />
<div class="flex justify-center">
  <div class="w-full md:w-1/2 lg:w-1/4">
    <h1 class="text-center">Account</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.text_field :name, autofocus: false,  placeholder: "Full name", class: 'w-full p-2 border rounded bg-violet-50' %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, placeholder: 'Email Address', class: 'w-full p-2 border rounded bg-violet-50' %>
      </div>

      <div class="mb-3">
        <%= f.label :avatar, class: "block font-bold mb-1" %>
        <%= f.file_field :avatar, accept:'image/*', class: 'w-full p-2 border rounded' %>
      </div>

      <%= image_tag avatar_path(f.object), class: "rounded border shadow-sm block mx-auto my-3" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: 'w-full p-2 border rounded  bg-violet-50', placeholder: 'Password'  %>
        <p class="text-sm text-gray-500 "><small>Leave password blank if you don't want to change it</small></p>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'w-full p-2 border rounded', placeholder: 'Confirm Password'  %>
      </div>

      <div class="mb-3">
        <%= f.password_field :current_password, autocomplete: "off", class: 'w-full p-2 border rounded', placeholder: 'Current Password'  %>
        <p class="text-sm text-gray-500"><small>We need your current password to confirm your changes</small></p>
      </div>

      <div class="mb-3">
        <%= f.submit "Save Changes", class: 'w-full p-2 bg-blue-500 text-white rounded' %>
      </div>
    <% end %>
    <hr>

    <p class="text-center"><%= link_to "Deactivate my account", registration_path(resource_name), data: { confirm: "Are you sure? You cannot undo this." }, method: :delete %></p>
  </div>
</div>
